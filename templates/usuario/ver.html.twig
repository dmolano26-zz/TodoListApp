{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block titulo_panel %} Información del usuario {% endblock titulo_panel %}
{% block botones_panel %} <a class="btn btn-success"href="/usuario/new" style="margin-top: 10px !important; margin-right: 10px !important;"><span class="fas fa-plus"></span> Registrar</a> {% endblock botones_panel %}

{% block contenido_panel %}
    <table class="table table-striped table-bordered">
        <tr>    
            <td><b>ID:</b> {{ usuario.id }}</td>
        </tr>
        <tr>
            <td><b>Usuario:</b> {{ usuario.username }}</td>
        </tr>
        <tr>    
            <td><b>Contraseña:</b> Información oculta</td>
        </tr>
        <tr>    
            <td><b>Persona:</b> ({{ usuario.persona.id }}) - {{ usuario.persona.nombres }} {{ usuario.persona.apellidos }}</td>
        </tr>
    </table>
    <a href="/usuario"><span class="fas fa-arrow-left"></span>Volver a la lista</a>
{% endblock %}
